%% Source of truth: QuantumZero-mobile/lib/main.dart and QuantumZero-mobile/lib/screens/*.dart
%% References:
%% - State management: diagrams/class-mobile-state-management.mmd
%% - Shared widgets: QuantumZero-mobile/lib/shared/widgets/*.dart
classDiagram
    direction LR
    class QuantumZeroApp {
        +build(BuildContext context) Widget
    }

    class SplashScreen {
        <<StatefulWidget>>
        +createState() State
    }

    class HomeScreen {
        <<ConsumerStatefulWidget>>
        +createState() ConsumerState
    }

    class QrScanScreen {
        <<StatefulWidget>>
        +createState() State
    }

    class QrPresentationScreen {
        <<StatefulWidget>>
        +String qrData
        +String? credentialType
        +Duration? expiryDuration
        +createState() State
    }

    class SettingsScreen {
        <<StatefulWidget>>
        +createState() State
    }

    class ItemScreen {
        <<StatelessWidget>>
        +build(BuildContext context) Widget
    }

    %% Riverpod providers (see class-mobile-state-management.mmd)
    class didProvider {
        <<StateNotifierProvider>>
    }
    class credentialProvider {
        <<StateNotifierProvider>>
    }

    %% Shared widgets
    class CredentialCard {
        <<Widget>>
    }
    class DidStatusCard {
        <<Widget>>
    }

    %% External UI libraries used directly by screens
    class MobileScanner {
        <<mobile_scanner>>
    }
    class MobileScannerController {
        <<mobile_scanner>>
    }
    class QrImageView {
        <<qr_flutter>>
    }

    QuantumZeroApp --> SplashScreen : initialRoute "/"
    QuantumZeroApp --> HomeScreen : route "/home"
    QuantumZeroApp --> ItemScreen : route "/item"
    QuantumZeroApp --> SettingsScreen : route "/settings"
    QuantumZeroApp --> QrScanScreen : route "/qr-scan"
    QuantumZeroApp --> QrPresentationScreen : route "/qr-present"

    HomeScreen ..> didProvider : ref.watch/read
    HomeScreen ..> credentialProvider : ref.watch/read
    HomeScreen ..> CredentialCard : uses
    HomeScreen ..> DidStatusCard : uses

    QrScanScreen ..> MobileScanner : uses
    QrScanScreen ..> MobileScannerController : owns
    QrPresentationScreen ..> QrImageView : uses

